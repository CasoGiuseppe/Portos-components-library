{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "src/**/*.ts",
    "src/**/*.vue",
    "src/index.ts",
    "src/**/*.scss"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.d.ts",
    "src/App.vue",
    "src/main.ts",
  ],
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "composite": true,
    "declaration": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"],
      "@ui/*": ["./src/components/*"]
    }
  }
}
